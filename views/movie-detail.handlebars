<div class="row heading">

  {{#if errorMessage}}

    <div class="col text-center">
      <h2>{{errorMessage}}</h1>
        <a href="/movie-list" class="button outline">Back to movie list</a>
    </div>

  {{else}}

    <div class="col-3">
      <figure>
        <img src="{{cover}}" alt="{{title}}">
      </figure>
    </div>

    <div class="col">
      <header>
        <h2>{{title}}</h2>
      </header>
      <p>Year: {{year}}</p>
      <p>Director: {{director}}</p>
      <p>Top Cast: 
        <ul class="movie-cast">
          {{#each topCast}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      </p>
      <a href="{{IMDB}}" target="_blank">View on Internet Movie Database</a>
    </div>

  {{/if}}

</div>